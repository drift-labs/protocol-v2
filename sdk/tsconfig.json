{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "./lib/node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declarationMap": true,
		"paths": {
			"@solana/web3.js": ["./node_modules/@solana/web3.js"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "tests"]
}
